@charset "UTF-8";

.carousel-item:hover {
   cursor: pointer;
}
.carousel .carousel-item {
  height: 100%;
  width:100%;
}
.carousel-item img {
    object-fit:cover;
    top: 0;
    left: 0;
    height: 180px;
	border: 10px outset #dddddd;
	border-left: 0px;
	border-bottom: 0px;
	margin: 10px;
	margin-left: 35px;


}
.card {
    transition: transform 0.2s ease;
	width:100%;
    border-radius: 0;
    border: 0;
    margin-bottom: 1.5em;
    background-color: #E7EDE4;
}
.card:hover {
    transform: scale(1.1);
    cursor: pointer;
}

.newBookSlide{
	width:300px;
	height: 280px;
	background-color: #E7EDE4;
	border-radius: 15px;
	outline: 3px solid white;
}
.carousel-indicators {
	margin-bottom:0px;
	width:100%;
	margin:0 auto;
}	

.card .img{
	margin-top: 15px;
}
.card .newBookTitle{
	text-align: center;
	margin: 10px;
	margin-left: 30px;
	font-weight: 700;
	font-size: 18px;
	padding:5px;
	background-color: white;
	border-radius: 10px;

}