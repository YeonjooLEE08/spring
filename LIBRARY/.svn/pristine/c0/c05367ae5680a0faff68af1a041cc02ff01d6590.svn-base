/* 우측 상단 프로필 메뉴 */
.header-nav {
  overflow: hidden;
  position: absolute;
  left: 86%;
  bottom: 77%;
  width: auto;
  height: 65px;
  margin-top: -45px;
  /* background: #fff; */
  border-radius: 45px;
  transform: translate3d(-100%, 0, 0);
}
.nav__cb {
  z-index: -1000;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
  pointer-events: none;
}
.nav__content {
  position: relative;
  width: 65px;
  height: 100%;
  transition: width 1s cubic-bezier(0.49, -0.3, 0.68, 1.23);
}
.nav__cb:checked ~ .nav__content {
  transition: width 1s cubic-bezier(0.48, 0.43, 0.29, 1.3);
  width: 410px;
}
.nav__items {
  position: relative;
  width: 410px;
  height: 100%;
  padding-right: 110px;
  list-style-type: none;
  font-size: 0;
  background-color: #FAF1E6;
  border-radius: 10px 45px 45px 10px;
  opacity: 0.9;
}
.nav__item {
  display: inline-block;
  vertical-align: top;
  width: 65px;
  text-align: center;
  color: #16784B;
  font-size: 14px;
  line-height: 70px;
  font-family: Helvetica, Arial, sans-serif;
  font-weight: bold;
  perspective: 1000px;
  transition: color 0.3s;
  cursor: pointer;
}
.nav__item:hover {
  color: #16784B;
  font-size: 1.1rem;
  }
.nav__item-text {
  display: block;
  height: 100%;
  transform: rotateY(-70deg);
  opacity: 0;
  transition: transform 0.7s cubic-bezier(0.48, 0.43, 0.7, 2.5), opacity 0.7s;
}
.nav__cb:checked ~ .nav__content .nav__item-text {
  transform: rotateY(0);
  opacity: 1;
  transition: transform 0.7s cubic-bezier(0.48, 0.43, 0.7, 2.5), opacity 0.2s;
}
.nav__item:nth-child(1) .nav__item-text {
  transition-delay: 0.3s;
}
.nav__cb:checked ~ .nav__content .nav__item:nth-child(1) .nav__item-text {
  transition-delay: 0s;
}
.nav__item:nth-child(2) .nav__item-text {
  transition-delay: 0.2s;
}
.nav__cb:checked ~ .nav__content .nav__item:nth-child(2) .nav__item-text {
  transition-delay: 0.1s;
}
.nav__item:nth-child(3) .nav__item-text {
  transition-delay: 0.1s;
}
.nav__cb:checked ~ .nav__content .nav__item:nth-child(3) .nav__item-text {
  transition-delay: 0.2s;
}
.nav__item:nth-child(4) .nav__item-text {
  transition-delay: 0s;
}
.nav__cb:checked ~ .nav__content .nav__item:nth-child(4) .nav__item-text {
  transition-delay: 0.3s;
}
.nav__btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 65px;
  height: 65px;
  cursor: pointer;
  border-radius: 100%;
}
.nav__btn img{
	padding: 5px;
	width:65px;
	height: 65px;
	border-radius: 100%;
}



/*TO READ LIST*/
.toRead-nav {
	text-align: right;
	left: 95%;
    bottom: 10%;
	background-color: #F5F3CE;
	opacity: 0.9;
    overflow: hidden;
    position: relative;
    position: fixed;
    transform: translateX(0px);
    height: 50%;
    width: 400px;
    transition: all 800ms cubic-bezier(.8, 0, .33, 1);
    border-radius: 100% 0% 50% 100%;
    z-index: 1;
}

.toRead-nav.nav-open {
    transform: translateX(-300px);
    border-radius: 0% 0% 0% 0%;
   background: rgba(255, 255, 255, 0.6);
}

.toRead-nav .menu-btn {
    position: absolute;
    top: 40%;
    left: 8%;
    padding: 0;
    width: 30px;
    cursor: pointer;
    z-index: 2;
}

.toRead-nav .menu-btn .line {
    padding: 0;
    width: 30px;
    background: #fff;
    height: 2px;
    margin: 5px 0;
    transition: all 700ms cubic-bezier(.9, 0, .33, 1);
}



.toRead-nav .nav-links {
    position: absolute;
    padding: 3.5rem 3rem 3.5rem 7.5rem;
    left: 75px;
    top: 0;
    width: 100%;
    height: 70%;
    align-items: center;
    justify-content: center;
    transform: translateX(0px);
    opacity: 0;
    transition: all 900ms cubic-bezier(.9, 0, .33, 1);
}

.toRead-nav .nav-links.fade-in {
    opacity: 1;
    transform: translateX(-100px);
}

.toRead-nav .nav-links .link {
    margin: 20px 0;
    text-decoration: none;
    font-family: sans-serif;
    color: rgba(0,0,0,0.9);
    font-weight: 700;
    text-transform: uppercase;
    font-size: 1.2rem;
    transition: all 300ms cubic-bezier(.9, 0, .33, 1);
}

.toRead-nav .nav-links .link:hover {
    color: rgba(0, 0, 0, .5);
}

.toRead-nav a{
  margin: 0 20px;
  color: #fff;
  font-size: 2rem;
  transition: all 400ms ease;
}

.toRead-nav a:hover{
  color: #222;
} 


