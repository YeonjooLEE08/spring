@charset "UTF-8";
.slide{
	margin:10px;
	
}
.carousel-item:hover {
   cursor: pointer;
}
.carousel .carousel-item {
  height: 100%;
  width:100%;
}
.newBookImg img {
    object-fit:cover;
    top: 0;
    left: 0;
    height: 180px;
	border: 10px outset #dddddd;
	border-left: 0px;
	border-bottom: 0px;
	margin: 10px;
	margin-left: 35px;

}
.rcdBookImg img{
	object-fit:cover;
    top: 0;
    left: 0;
    height: 180px;
	border: 10px outset #dddddd;
	border-left: 0px;
	border-bottom: 0px;
	margin: 10px;
	margin-left: 35px;
	
	
}
.rcdBookImg .img{
	position: relative;
}

.rcdBookImg .rank{
	position: absolute;
	top: 23%;
    left: 23%;
	transform: translate( -50%, -50% );
	width: 300px;
	height: 50px;
	
}
.card {
    transition: transform 0.2s ease;
	width:100%;
    border-radius: 0;
    border: 0;
    margin-bottom: 1.5em;
    background-color: #E7EDE4;
}
.card:hover {
    transform: scale(1.1);
    cursor: pointer;
}

.newBookSlide{
	width:100%;
	height: 280px;
	background-color: #E7EDE4;
	border: 2px solid #dddddd;
	
}
.calendar{
	width:100%;
	padding:20px;
	background-color: #E7EDE4;
	border: 2px solid #dddddd;
}
.carousel-indicators {
	margin-bottom:0px;
	width:100%;
	margin:0 auto;
}	


.card .newBookTitle{
	text-align: center;
	margin: 10px;
	margin-left: 30px;
	font-weight: 700;
	font-size: 18px;
	padding:5px;
	background-color: white;
	border-radius: 10px;

}

.carousel carousel-dark slide{
	height: 100%;
	width:100%;
	
}

.goNewBookList {
	display: inline-flex;	
	width:100%;
}
.plusBtn{
	padding-top: 1rem;
	display: inline-block;
	
}
.goNewBookList a{
	margin-left: 5px;
	font-weight: 700;
	display: inline-block;
	text-align: right;
}

.slideTitle{
	text-align: left;
	font-weight: 600;
	font-size: 1.5rem;
	width: 83%;
	padding-left: 10px;
	color:  #16784B;
}