@charset "UTF-8";

.wrapper button{
	background: none;
	border: 0;
	box-sizing: border-box;
	width: 200px;
  	height: 40px;
	margin: 2.5rem auto 2rem;
	display: block;
	padding: 0.7rem 1.7rem;
	box-shadow: inset 0 0 0 2px #16784B;
	color: #16784B;
	font-size: inherit;
	font-weight: 700;
	
	position: relative;
	vertical-align: middle;
	
	} 
.wrapper button{
  line-height: 20px;
  font-size: 18px;
  color: #16784B;
  text-align: center;
  position: relative;
  transition: all .35s;
}

.wrapper button span{
  position: relative;
  z-index: 2;
}

.wrapper button:after{
  position: absolute;
  content: "";
  top: 0;
  left: 0;
  width: 0;
  height: 100%;
  background:  #16784B;
  transition: all .35s;
}

.wrapper button:hover{
  color: #ffffff;
}

.wrapper button:hover:after{
  width: 100%;
}